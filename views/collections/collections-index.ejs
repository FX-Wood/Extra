<h2>COLLECTIONS INDEX</h2>

<div class="container">
    <h3>User</h3>
    <img class="left" src="<%- profileImage %>" alt="user profile image">
    <p>User name: <%= currentUser.name %></p>
    <p>Number of collections: [placeholder]</p>
    <p>Number of cards: [placeholder]</p>
</div>

<div class="container">
    <h3>Collections</h3>
        <a class="btn-large" id="new-collection-btn"> 
            <i class="material-icons left">
                add
            </i>
            Add a collection
        </a>
</div>
<div id="collections">
<%  user.collections
        .sort((a, b) => {
            return b.updatedAt - a.updatedAt
        })
        .forEach(set => { %>
        <div id="<%= 'id_' + set.id  %>" class="card hoverable waves-effect waves-light waves-teal">
            <div class="card-content">
                <span class="card-title">
                    <%= set.name %>
                </span>
                <p class="collection-description">
                    <%= set.description%>
                </p>
            </div>
        </div>
    <% }) %>
</div>
<script src="/js/collections-index.js"></script>